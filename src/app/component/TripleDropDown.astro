---
const provinces = ['Provinsi 1', 'Provinsi 2', 'Provinsi 3'];
const cities = ['Kab/Kota 1', 'Kab/Kota 2', 'Kab/Kota 3'];
const sources = ['Sumberdana 1', 'Sumberdana 2', 'Sumberdana 3'];
---

<div
	class="grid grid-cols-1 gap-4 p-16 pt-10 pb-10 bg-white w-full rounded-3xl mx-auto md:grid-cols-2"
>
	<!-- Provinsi Dropdown -->
	<div class="flex-1">
		<label for="provinsi" class="block mb-2 text-sm font-medium text-gray-700">
			Provinsi
		</label>
		<select
			id="provinsi"
			class="w-full p-2 border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:border-blue-500"
		>
			<option value="" disabled selected>- Belum Memilih -</option>
			{
				provinces.map((province) => (
					<option value={province}>{province}</option>
				))
			}
		</select>
	</div>

	<!-- Kab/Kota Dropdown -->
	<div class="flex-1">
		<label for="city" class="block mb-2 text-sm font-medium text-gray-700">
			Kab / Kota
		</label>
		<select
			id="city"
			class="w-full p-2 border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:border-blue-500"
		>
			<option value="" disabled selected>- Belum Memilih -</option>
			{cities.map((city) => <option value={city}>{city}</option>)}
		</select>
	</div>

	<!-- Sumberdana Dropdown (Full width) -->
	<div class="col-span-2">
		<label for="source" class="block mb-2 text-sm font-medium text-gray-700">
			Pilih Sumberdana
		</label>
		<select
			id="source"
			class="w-full p-2 border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:border-blue-500"
		>
			<option value="" disabled selected>- Belum Memilih -</option>
			{sources.map((source) => <option value={source}>{source}</option>)}
		</select>
	</div>

	<!-- Apply Button -->
	<div class="col-span-2 flex justify-end">
		<button
			class="px-4 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded-lg transition"
		>
			Terapkan
		</button>
	</div>
</div>

<style global>
	@media (max-width: 768px) {
		.grid {
			grid-template-columns: 1fr;
		}
	}
</style>
